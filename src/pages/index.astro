---
import { getCollection } from 'astro:content';
import ProjectCard from '../components/ProjectCard.astro';
import FeaturedProjectCard from '../components/FeaturedProjectCard.astro';
import Header from '../components/Header.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import { siteConfig } from '../config/site';
import { MEDIA_BASE_URL } from '../config/media';
import Story from '../content/story-draft1.mdx';

const projects = await getCollection('projects');

// Helper function to get the full media URL
function getMediaUrl(src: string): string {
	// If src already starts with http or is a full URL, return as-is
	if (src.startsWith('http') || src.startsWith('//')) {
		return src;
	}
	// If src starts with /astro-portfolio/assets, replace with MEDIA_BASE_URL
	if (src.startsWith('/astro-portfolio/assets')) {
		return src.replace('/astro-portfolio/assets', MEDIA_BASE_URL);
	}
	// If src starts with /assets, handle based on mode
	if (src.startsWith('/assets')) {
		// In dev mode, MEDIA_BASE_URL is /assets, so return path as-is
		if (MEDIA_BASE_URL === '/assets') {
			return src;
		}
		// In prod mode, replace /assets with GCS base URL
		return src.replace('/assets', MEDIA_BASE_URL);
	}
	// Otherwise, prepend MEDIA_BASE_URL
	return `${MEDIA_BASE_URL}${src.startsWith('/') ? '' : '/'}${src}`;
}

// Process contact image URL
const contactImageSrc = getMediaUrl('/assets/site/251009_MakerCamp28839_SOCIAL.jpeg');

// Get featured projects based on featured: true property
const featuredProjects = projects
  .filter(project => project.data.featured === true)
  .sort((a, b) => a.data.sortOrder - b.data.sortOrder)
  .slice(0, 3);


// Hero carousel media
const heroMedia = [
  { src: '/astro-portfolio/assets/site/20250327_130203.jpg', type: 'image', alt: 'Featured project' },
  { src: '/astro-portfolio/assets/site/20171209_161202_1shortcrop-1.mp4', type: 'video', alt: 'Light Mirror project' },
  { src: '/astro-portfolio/assets/projects/light_mirror/20200325_230431.mp4', type: 'video', alt: 'Light Mirror project' },
  { src: '/astro-portfolio/assets/projects/arcade/20240304_174714.jpg', type: 'image', alt: 'Arcade project' },
  { src: '/astro-portfolio/assets/site/20250522_133326.jpg', type: 'image', alt: 'Featured project' },
  { src: '/astro-portfolio/assets/projects/burning_man/20220901_222706.mp4', type: 'video', alt: 'Burning Man project' },
  { src: '/astro-portfolio/assets/site/20250327_130224.jpg', type: 'image', alt: 'Featured project' },
