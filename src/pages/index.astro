		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio</title>
	</head>
	<body>
		<Header />
		
		<HeroCarousel media={heroMedia} height="50vh" interval={4000} />

		<main class="main-content">
			<!-- Hero Section -->
			<!-- <section class="hero">
				<div class="hero-content"> -->
					<!-- <h1 class="hero-name">{siteConfig.owner}</h1> -->
					<!-- <p class="hero-title">{siteConfig.tagline}</p> -->
					<!-- <p class="hero-description">
						{siteConfig.description}
					</p> -->
				<!-- </div>
			</section> -->

			<!-- Featured Projects -->
			<!-- <section class="featured-projects">
				<h2>Featured Work</h2>
				<div class="featured-grid">
					{featuredProjects.map((project) => (
						<FeaturedProjectCard project={project} />
					))}
				</div>
			</section> -->

			<!-- Example MDX Content -->
			<section class="project-description">
				<Story />
			</section>

			<!-- 6 Most Recent Featured Projects -->
			<section class="project-section">
				<!-- <h2>Complete Projects</h2> -->
				<div class="projects-grid">
					{featuredProjects.map((project) => (
						<ProjectCard project={project} />
					))}
				</div>
			</section>

			<!-- View All Projects Button -->
			<section class="view-all-projects">
				<a href="/projects" class="view-all-button">View All Projects</a>
			</section>

			<!-- Talk to Me Section -->
			<ContactSection contactImageSrc={contactImageSrc} />

			
			
		</main>
		
		<style>
			:root {
				--card-radius: 0.5rem;
				--accent-color: #3b82f6;
				--grid-gap: 1rem;
				--card-min-width: 300px;
				--section-spacing: 4rem;
			}
			
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: system-ui, sans-serif;
				background: #0f0f0f;
				color: #ffffff;
				line-height: 1.6;
			}
			

			.main-content {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 4rem;
				position: relative;
				z-index: 1;
			}

			/* Hero Section */
			.hero {
				margin-bottom: var(--section-spacing);
				text-align: center;
			}

			.hero-content {
				max-width: 800px;
				margin: 0 auto;
			}

			.hero-name {
				font-size: 3.5rem;
				font-weight: 700;
				margin-bottom: 0.5rem;
				background: linear-gradient(135deg, #3b82f6, #8b5cf6);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.hero-title {
				font-size: 1.5rem;
				color: #cccccc;
				margin-bottom: 2rem;
			}

			.hero-description {
				font-size: 1.2rem;
				color: #e5e5e5;
				line-height: 1.7;
				max-width: 600px;
				margin: 0 auto;
				white-space: pre-line; /* Preserve newlines */
			}

			/* Featured Projects */
			.featured-projects {
				margin-bottom: var(--section-spacing);
			}

			.featured-projects h2 {
				font-size: 2.5rem;
				font-weight: 700;
				margin-bottom: 2rem;
				text-align: center;
			}

			.project-section h2 {
				font-size: 2rem;
				font-weight: 600;
				margin-bottom: 2rem;
				color: #ffffff;
				border-bottom: 2px solid var(--accent-color);
				padding-bottom: 0.5rem;
				display: inline-block;
			}

			.projects-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(var(--card-min-width), 1fr));
				gap: var(--grid-gap);
			}

			.featured-grid {
				display: grid;
				grid-template-columns: 1fr;
				gap: 2rem;
			}


			/* View All Projects Button */
			.view-all-projects {
				margin-bottom: var(--section-spacing);
				text-align: center;
				padding: 3rem 0 2rem; /* extra space above the button */
			}

			.view-all-button {
				display: inline-block;
				padding: 1rem 2rem;
				width: 50%;
				min-width: max-content; /* don't shrink smaller than its text */
				text-align: center;
				background: var(--accent-color);
				color: white;
				text-decoration: none;
				border-radius: 0.5rem;
				font-weight: 600;
				font-size: 1.1rem;
				transition: all 0.2s;
			}

			.view-all-button:hover {
				background: #2563eb;
				transform: translateY(-2px);
			}

			/* Section Headers */
			/* h2 {
				color: #ffffff;
			} */

			/* Example MDX Section */
			.project-description {
				margin-bottom: var(--section-spacing);
				padding: 0 0;
				/* border-top: 1px solid #333; */
			}
			
			@media (max-width: 768px) {
				.hero-canvas {
					height: 50vh;
				}

				.hero-image::after {
					height: 100px;
				}

				.main-content {
					padding: 2rem 1rem 0 1rem;
				}
				
				.hero-name {
					font-size: 2.5rem;
				}

				.hero-title {
					font-size: 1.2rem;
				}

				.hero-description {
					font-size: 1.1rem;
				}

				.featured-grid {
					gap: 1.5rem;
				}
			}
		</style>
	</body>
</html>
